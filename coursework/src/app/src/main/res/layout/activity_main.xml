<?xml version="1.0" encoding="utf-8"?>
<com.jeremyfeinstein.slidingmenu.lib.SlidingMenu
    xmlns:sliding="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slidingMenu"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    sliding:viewAbove="@layout/layout_player"
    sliding:touchModeAbove="fullscreen"

    sliding:viewBehind="@layout/layout_list"
    sliding:behindOffset="@dimen/sliding_offset"

    sliding:shadowDrawable="@drawable/shadow"
    sliding:shadowWidth="@dimen/shadow_width"

    sliding:fadeEnabled="true"
    sliding:fadeDegree="0.3"
    />